@model Barberia.Models.EnteModel
@using Resources

@{
    ViewBag.Title = Resources.Ente;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h2 style="color:#3c8dbc" class="box-title">
            <i class="fa fa-hospital-o"></i>
            @ViewBag.Title
        </h2>
    </section>

    <section class="content">

        <div class="row">

            @Html.ValidationSummary(true)

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.CODE)
                @Html.TextBoxFor(model => model.CODE, null, new { @maxlength = 4, @class = "form-control", @onkeypress = "return soloNumeros(event);" })
                @Html.ValidationMessageFor(model => model.CODE)
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Descripcion)
                @Html.TextBoxFor(model => model.Descripcion, null, new { @maxlength = 100, @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Calle)
                @Html.TextBoxFor(model => model.Calle, null, new { @maxlength = 100, @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Calle)
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Altura)
                @Html.TextBoxFor(model => model.Altura, null, new { @maxlength = 5, @class = "form-control", @onkeypress = "return soloNumeros(event);" })
                @Html.ValidationMessageFor(model => model.Altura)
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Localidad)
                @Html.DropDownList("IdLocalidad", new SelectList(ViewBag.Localidades, "ORID", "Descripcion"), "SELECCIONAR...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdLocalidad)
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="form-group col-md-12">
                        <h4 style="">ESPECIALIDADES</h4>
                        <table style="width:100%" class="table table-hover table-striped">
                            @Html.EditorFor(x => x.Especialidades)
                        </table>
                    </div>
                </div>
            </div>

        </div>

        <div class="clearfix"></div>
        @Html.ActionLink(Resources.Atras, "Index", null, null, new { @class = "btn btn-danger" })
        <button type="submit" class="btn btn-primary">@Resources.Aceptar</button>
    </section>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        var txtBox = document.getElementById("CODE");
        if (txtBox != null) txtBox.focus();

    </script>
}
