@model Barberia.Models.VentaModel
@using Resources

@{
    ViewBag.Title = "Create";
}
<div class="modal fade" id="ModalVenta" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Crear Venta</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumeroCaja)
                            @Html.EditorFor(model => model.NumeroCaja, new { htmlattributes = new { @class = "form-control cvent",  @maxlength = "12", @readonly = "readonly" } })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdClienteVenta)
                            @Html.DropDownList("IdClienteVenta", new SelectList(ViewBag.Clientes, "ORID", "Apellido"), "SIN DEFINIR", new { @class = "form-control cvent" })
                            @Html.ValidationMessageFor(model => model.IdClienteVenta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdTipoComprobante)
                            @Html.DropDownList("IdTipoComprobante", new SelectList(ViewBag.TipoComprobante, "ORID", "Descripcion"), "SIN DEFINIR", new { @class = "form-control cvent" })
                            @Html.ValidationMessageFor(model => model.IdTipoComprobante, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumeroComprobanteVenta)
                            @Html.EditorFor(model => model.NumeroComprobanteVenta, new { htmlAttributes = new { @class = "form-control cvent", @maxlength = "5" } })
                            @Html.ValidationMessageFor(model => model.NumeroComprobanteVenta, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    @*<div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ImpuestoM)
                            @Html.EditorFor(model => model.ImpuestoM, new { htmlAttributes = new { @class = "form-control cvent", @maxlength = "5" } })
                            @Html.ValidationMessageFor(model => model.ImpuestoM, "", new { @class = "text-danger" })
                        </div>
                    </div>*@




                </div>
            </div>


                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" onclick="ProcesarVenta()" class="btn btn-primary">Guardar</button>
                </div>

        </div>


    </div>
</div>


