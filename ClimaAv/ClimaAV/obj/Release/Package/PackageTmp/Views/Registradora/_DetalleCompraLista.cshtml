@model IEnumerable<Barberia.Models.DetalleCompraListaModel>
@using Resources

@if (Model.Count() != 0)
{
    <div class="col-md-6">
        <h4>Detalles de Compra</h4>
    </div>
    <table id="ModalDetalleCompraLista" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Borrar</th>
                <th>Producto</th> @*Aca hay que mostrar cualquiera de los dos, el que corresponda*@
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Proveedor</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a style="padding:15px" title="Eliminar Detalle" href="#" onclick="DelDetalleCompraModal('@item.ORID', '@item.IdCompra')"><i class="far fa-trash-alt"></i></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                   

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Borrar</th>
                <th>Producto</th> @*Aca hay que mostrar cualquiera de los dos, el que corresponda*@
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Proveedor</th>
                <th>Total</th>
            </tr>
        </tfoot>
    </table>
}
