@model IEnumerable<Barberia.Models.VentaListaModel>
@using Resources

@if (Model.Count() != 0)
{
    <div class="col-md-6">
        <h4>Venta</h4>
    </div>
    <table id="VentasLista" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Editar</th>
                <th>Fecha</th>
                <th>Caja</th>
                <th>Usuario</th>
                <th>Cliente</th>
                <th>Estado</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a style="padding:15px" title="Eliminar" href="@Url.Action("DeleteVenta", new { id=item.ORID })"><i class="far fa-trash-alt"></i></a>
                        @*<a style="padding:15px" title="@Resources.Editar" href="@Url.Action("Edit", new { id = item.ORID })"><i class="fas fa-pen"></i></a>*@
                        <a style="padding:15px" title="Nuevo Detalle" href="#" onclick="AddDetalleVentaModal('@item.ORID')"><i class="fas fa-plus"></i></a>
                        <a style="padding:15px" title="Ver Detalles" href="#" onclick="ListaDetalleVentaModal('@item.ORID')"><i class="fas fa-align-justify"></i></a>
                        <a style="padding:15px" title="Operaciones de la venta" href="#" onclick="UpdateEstadoVenta('@item.ORID')"><i class="fas fa-calculator"></i></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CajaNumero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MontoTotal)
                    </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Editar</th>
                <th>Fecha</th>
                <th>Caja</th>
                <th>Usuario</th>
                <th>Cliente</th>
                <th>Estado</th>
                <th>Monto</th>
            </tr>
        </tfoot>
    </table>


}
