
@model Barberia.Models.CompraModel

@using (Html.BeginForm())
{
    <div class="card card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.NumeroComprobanteB)
                    @Html.EditorFor(model => model.NumeroComprobanteB, new { htmlAttributes = new { @class = "form-control comp", @maxlength = "50", onkeyup = "Mayuscula(this)" } })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <button type="button" onclick="ProcesarFiltroCompras()" class="btn btn-primary form-control">Buscar Compras</button>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <button type="button" onclick="AddCompraModal()" class="btn btn-primary form-control">Nueva Compra</button>
                </div>
            </div>

            @*<div class="col-md-3">
                    <div class="form-group">
                        <button type="button" onclick="GenerarExcel()" class="btn btn-primary form-control">Excel</button>
                    </div>
                </div>*@
        </div>

        <div id="compras">
            @Html.Partial("_CompraLista", new List<Barberia.Models.CompraListaModel>())
        </div>

        <div id="CompraModal">
            @Html.Partial("_CreateCompra", new Barberia.Models.CompraModel())
        </div>

        <div id="DetalleCompraModal">
            @Html.Partial("_CreateDetalleCompra", new Barberia.Models.DetalleCompraModel())
        </div>

        <div id="ListaDetalleCompra">

            @Html.Partial("_DetalleCompraLista", new List<Barberia.Models.DetalleCompraListaModel>())
        </div>
    </div>
}

