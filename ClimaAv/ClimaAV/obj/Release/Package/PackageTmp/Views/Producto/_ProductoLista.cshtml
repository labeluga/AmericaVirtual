@model IEnumerable<Barberia.Models.ProductoListaModel>
@using Resources

@if (Model.Count() != 0)
{
    <table id="productosLista" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Editar</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Minimo de Stock</th>
                <th>$ Compra</th>
                <th>$ Venta</th>
                <th>Proveedor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a style="padding:15px" title="@Resources.Editar" href="@Url.Action("Edit", new { id=item.ORID })"><i class="fas fa-pen"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CODE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimoStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proveedor)
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Editar</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Minimo de Stock</th>
                <th>$ Compra</th>
                <th>$ Venta</th>
                <th>Proveedor</th>
            </tr>
        </tfoot>
    </table>
}
