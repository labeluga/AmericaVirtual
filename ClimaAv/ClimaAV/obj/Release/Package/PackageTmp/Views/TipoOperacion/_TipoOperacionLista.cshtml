@model IEnumerable<Barberia.Models.TipoOperacionListaModel>
@using Resources

@if (Model.Count() != 0)
{
    <table id="TipoOperacionLista" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Editar</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Es Debe?</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a style="padding:15px" title="@Resources.Editar" href="@Url.Action("Edit", new { id=item.ORID })"><i class="fas fa-pen"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CODE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Debe)
                </td>

            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Editar</th>
                <th>Código</th>
                <th>Descripción</th>
                <th>Es Debe?</th>
            </tr>
        </tfoot>
    </table>
}
