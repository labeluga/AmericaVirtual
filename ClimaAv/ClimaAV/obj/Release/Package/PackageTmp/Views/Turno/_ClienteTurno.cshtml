@model  Barberia.Models.ClienteTurnoModel
@using Resources

<div class="modal fade" id="ModalCT" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">CANAL DE CONTACTO</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">

                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Documento)</label>
                            @Html.EditorFor(model => model.Documento,
                            new { htmlAttributes = new { @onblur = "ObtenerPersona()", @class = "form-control clitur", @maxlength = "100" } })
                            @Html.ValidationMessageFor(model => model.Documento, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Apellido)</label>
                            @Html.EditorFor(model => model.Apellido,
                            new { htmlAttributes = new { @class = "form-control clitur", @maxlength = "100" } })
                            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">@Html.LabelFor(model => model.Nombre)</label>
                            @Html.EditorFor(model => model.Nombre,
                            new { htmlAttributes = new { @class = "form-control clitur", @maxlength = "100" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" onclick="ProcesarClienteTurno()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
