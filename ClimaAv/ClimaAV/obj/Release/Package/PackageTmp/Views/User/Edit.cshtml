@model Barberia.Models.UserModel
@using Resources

@{
    ViewBag.Title = "Editar Usuario";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h2 style="color:#3c8dbc" class="box-title">
            <i class="fa fa-user"></i>
            @ViewBag.Title
        </h2>
    </section>

    <section class="content">

        <div class="row">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.UserID)
            @Html.HiddenFor(model => model.Usuario)
            @Html.HiddenFor(model => model.IdEnte)

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, null, new { @class = "form-control", @maxlength = 100 })
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Apellido)
                @Html.TextBoxFor(model => model.Apellido, null, new { @class = "form-control", @maxlength = 100 })
                @Html.ValidationMessageFor(model => model.Apellido)
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control", @maxlength = 100 })
                @Html.ValidationMessageFor(model => model.Email)
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Telefono)
                @Html.TextBoxFor(model => model.Telefono, null, new { @class = "form-control", @type = "number", @maxlength = 100 })
                @Html.ValidationMessageFor(model => model.Telefono)
            </div>

        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="form-group col-md-12">
                    <h4 style="">ROLES</h4>
                    <table style="width:100%" class="table table-hover table-striped">
                        @Html.EditorFor(x => x.Roles)
                    </table>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        @Html.ActionLink(Resources.Atras, "Index", null, null, new { @class = "btn btn-danger" })
        <button type="submit" class="btn btn-primary">@Resources.Aceptar</button>

    </section>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}
