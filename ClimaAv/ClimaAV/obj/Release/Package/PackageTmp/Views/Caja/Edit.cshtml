@model Barberia.Models.CajaModel
@using Resources

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ORID)

<div class="form-horizontal">

    <div class="row">
        <div class="col-md-3">
            <h4>Editar Cliente</h4>
        </div>
    </div>

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Datos <small>de</small> Caja</h3>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Numero)
                        @Html.EditorFor(model => model.NumeroM, new { htmlAttributes = new { @Value = ViewBag.Numero, disabled = "disabled", @readonly = "readonly", @maxlength = "12", @onkeypress = "return SoloNumeros()" } })

                    </div>
                </div>

            </div>
            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Observacion)
                        @Html.EditorFor(model => model.Observacion, new { htmlAttributes = new { @class = "form-control", @maxlength = "100", onkeyup = "Mayuscula(this)" } })
                        @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdUsuario)
                        @Html.DropDownList("IdUsuario", new SelectList(ViewBag.Usuarios, "UserID", "Apellido"), "SIN DEFINIR", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdUsuario, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ubicación</h3>
        </div>
        <div class="card-body">

            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdLocalidad)
                        @Html.DropDownList("IdLocalidad", new SelectList(ViewBag.Localidades, "ORID", "Descripcion"), "SIN DEFINIR", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdLocalidad, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

        </div>
    </div>

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Contacto</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefono)
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Movil)
                        @Html.EditorFor(model => model.Movil, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Movil, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Correo)
                        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer row">

        <div class="col-md-4">
            <input type="submit" id="btnEditar" style="width:100%" value="EDITAR" class="btn btn-default" />
        </div>

    </div>

</div>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/smyp.js"></script>

    <script type="text/javascript">


        $("#Apellido").focus();



    </script>
}