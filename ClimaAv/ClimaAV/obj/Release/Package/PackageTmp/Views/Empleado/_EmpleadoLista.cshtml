@model IEnumerable<Barberia.Models.EmpleadoListaModel>
@using Resources

@if (Model.Count() != 0)
{
    <table id="empleadosLista" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Editar</th>
                <th>Documento</th>
                <th>Persona</th>
                <th>Nacimiento</th>
                <th>Localidad</th>
                <th>Teléfono</th>
                <th>Móvil</th>
                <th>Correo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a style="padding:15px" title="@Resources.Editar" href="@Url.Action("Edit", new { id = item.ORID })"><i class="fas fa-pen"></i></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Documento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido) @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Localidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Editar</th>
                <th>Documento</th>
                <th>Persona</th>
                <th>Nacimiento</th>
                <th>Localidad</th>
                <th>Teléfono</th>
                <th>Móvil</th>
                <th>Correo</th>
            </tr>
        </tfoot>
    </table>
}
