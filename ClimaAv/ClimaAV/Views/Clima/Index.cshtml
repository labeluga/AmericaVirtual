@model ClimaAV.Models.HomeModel
@{ ViewBag.Title = "Home Page"; }
<link href="~/Content/smyp.css" rel="stylesheet" />
<div class="row">
    <div class="col-lg-6" id="buscador">
        @Html.Partial("_BuscadorPartial", Model.Buscador)

    </div>
    <div class="col-lg-6">
        @Html.Partial("_ReporteDiario", Model.ResultViewModel)
    </div>
    <div class="col-lg-12 p-extendido">
        <div class="icon-box" style="height:35vh">
            <div class="contenedor-clima-horas">
                @Html.Partial("_ReportePorHorasPartial", Model.ResultViewModel.ClimaPorHora)
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $("#IdProvincia").change(function () {



    var _id = $(this).val();


            var _url = '@Url.Action("GetLocalidad", "Clima")' + '?IdProvincia=' + _id;

    $.ajax({
    url: _url,
    type: 'post',
        success: function (response) {

            $("#NombreLocalidad").html(response);
    }
    });
    });
    </script>
} 