@model ClimaAV.Models.UserUpdatePassword

@{
    ViewBag.Title = "Cambiar Contraseña";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h3 class="box-title">@ViewBag.Title</h3>
    </section>

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.UserID)

    <section class="content">

        <div class="col-md-3">

            <div class="row">
                <div class="form-group col-md-12">
                    @Html.Label("Contraseña Actual")
                    @Html.TextBoxFor(model => model.PasswordOld, null, new { @class = "form-control", @maxlength = 20, @type = "password" })
                    @Html.ValidationMessageFor(model => model.PasswordOld)
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    @Html.Label("Contraseña Nueva")
                    @Html.TextBoxFor(model => model.Password, null, new { @class = "form-control", @maxlength = 20, @type = "password" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    @Html.Label("Confirmar Contraseña Nueva")
                    @Html.TextBoxFor(model => model.ConfirmPassword, null, new { @class = "form-control", @maxlength = 20, @type = "password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-danger", @style = "width:100%" })
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" style="width:100%" class="btn btn-primary">Aceptar</button>
                </div>
            </div>

        </div>


        <div class="clearfix"></div>


    </section>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        var txtBox = document.getElementById("PasswordOld");
        if (txtBox != null) txtBox.focus();

    </script>

}
